<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<deployment-descriptor xsi:schemaLocation="http://www.jboss.org/jbpm deployment-descriptor.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <persistence-unit>org.jbpm.domain</persistence-unit>
    <audit-persistence-unit>org.jbpm.domain</audit-persistence-unit>
    <audit-mode>JPA</audit-mode>
    <persistence-mode>JPA</persistence-mode>
    <runtime-strategy>PER_PROCESS_INSTANCE</runtime-strategy>
    <marshalling-strategies>
        <marshalling-strategy>
            <resolver>mvel</resolver>
            <identifier>new org.drools.persistence.jpa.marshaller.JPAPlaceholderResolverStrategy("com.example:order-management:1.1-SNAPSHOT",classLoader)</identifier>
            <parameters />
        </marshalling-strategy>
    </marshalling-strategies>
    <event-listeners />
    <task-event-listeners />
    <globals />
    <work-item-handlers>
        <work-item-handler>
            <resolver>mvel</resolver>
            <identifier>new org.jbpm.process.workitem.bpmn2.DecisionTaskHandler("com.example", "order-management", "1.1-SNAPSHOT",15000)</identifier>
            <parameters />
            <name>DecisionTask</name>
        </work-item-handler>
    </work-item-handlers>
    <environment-entries />
    <configurations />
    <required-roles />
    <remoteable-classes>
        <remoteable-class>com.example.OrderInfo</remoteable-class>
        <remoteable-class>org.drools.persistence.jpa.marshaller.VariableEntity</remoteable-class>
    </remoteable-classes>
    <limit-serialization-classes>true</limit-serialization-classes>
</deployment-descriptor>